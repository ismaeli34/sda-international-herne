{
  "version": 2,
  "builds": [
    { "src": "dist/lifeline-herne-international/**", "use": "@vercel/static" }
  ],
  "routes": [
    {
      "src": "/sitemap.xml",
      "headers": { "Content-Type": "application/xml" },
      "dest": "/sitemap.xml"
    },
    {
      "src": "/robots.txt",
      "headers": { "Content-Type": "text/plain" },
      "dest": "/robots.txt"
    },
    {
      "src": "/(.*)",
      "dest": "/index.html"
    }
  ],
  "cleanUrls": true,
  "trailingSlash": false
}
